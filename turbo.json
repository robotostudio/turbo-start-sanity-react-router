{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"],
      "env": [
        "SANITY_API_READ_TOKEN",
        "SANITY_API_WRITE_TOKEN",
        "SANITY_READ_TOKEN",
        "SANITY_WRITE_TOKEN",
        "SANITY_SESSION_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
